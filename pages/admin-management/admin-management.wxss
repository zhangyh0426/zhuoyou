/* ÂìçÂ∫îÂºèËÆæËÆ° */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 30rpx 20rpx;
  }
  
  .header {
    padding: 40rpx 30rpx;
    margin-bottom: 40rpx;
  }
  
  .title {
    font-size: 44rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
  }
  
  .admin-section,
  .form-section,
  .security-section,
  .info-section {
    padding: 36rpx;
    margin-bottom: 36rpx;
  }
  
  .section-title {
    margin-bottom: 32rpx;
  }
  
  .title-text {
    font-size: 34rpx;
  }
  
  .admin-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 24rpx;
    padding: 28rpx;
  }
  
  .admin-actions {
    width: 100%;
    justify-content: flex-end;
  }
  
  .form-actions {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .submit-btn,
  .cancel-btn {
    height: 84rpx;
    font-size: 30rpx;
    border-radius: 30rpx;
    font-size: 30rpx;
  }
  
  .security-actions {
    gap: 18rpx;
  }
  
  .export-btn,
  .import-btn,
  .backup-btn {
    height: 80rpx;
    font-size: 28rpx;
  }
}

@media screen and (max-width: 450rpx) {
  .container {
    padding: 20rpx 16rpx;
  }
  
  .header {
    padding: 32rpx 24rpx;
    margin-bottom: 32rpx;
  }
  
  .admin-section,
  .form-section,
  .security-section,
  .info-section {
    padding: 28rpx;
    margin-bottom: 28rpx;
  }
  
  .admin-item {
    padding: 24rpx;
    margin-bottom: 20rpx;
  }
  
  .info-item {
    padding: 16rpx 20rpx 16rpx 56rpx;
    margin-bottom: 16rpx;
    font-size: 26rpx;
  }
}

/* Â§ßÂ±èÂπï‰ºòÂåñ */
@media screen and (min-width: 1200rpx) {
  .container {
    max-width: 1200rpx;
    margin: 0 auto;
    padding: 50rpx;
  }
  
  .admin-section,
  .form-section,
  .security-section,
  .info-section {
    padding: 50rpx;
    margin-bottom: 60rpx;
  }
  
  .admin-list {
    max-height: 800rpx;
  }
  
  .admin-item {
    padding: 40rpx;
    margin-bottom: 30rpx;
  }
  
  .security-actions {
    grid-template-columns: repeat(3, 1fr);
  }
}